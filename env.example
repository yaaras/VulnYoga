# VulnYoga - Vulnerable-by-Design Yoga Store API
# ⚠️  WARNING: This project is intentionally vulnerable. Do NOT expose publicly. For isolated lab use only.

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="file:./yogastore.db"

# JWT Configuration (intentionally weak for demo)
JWT_SECRET="dev-weak-secret-change-in-production"
JWT_EXPIRES_IN="24h"

# CORS Configuration
CORS_ORIGIN="*"

# Vulnerability Feature Flags (default: enabled = vulnerable)
# API1: Broken Object Level Authorization (BOLA)
VULN_API1_BOLA=true

# API2: Broken Authentication
VULN_API2_BROKEN_AUTH=true

# API3: Broken Object Property Level Authorization (BOPLA)
VULN_API3_BOPLA=true

# API4: Unrestricted Resource Consumption
VULN_API4_RESOURCE=true

# API5: Broken Function Level Authorization
VULN_API5_FUNC_AUTH=true

# API6: Unrestricted Access to Sensitive Business Flows
VULN_API6_BUSINESS_FLOW=true

# API7: Server-Side Request Forgery (SSRF)
VULN_API7_SSRF=true

# API8: Security Misconfiguration
VULN_API8_MISCONFIG=true

# API9: Improper Inventory Management
VULN_API9_INVENTORY=true

# API10: Unsafe Consumption of APIs
VULN_API10_UNSAFE_CONSUMP=true

# Safe Mode (optional - inverts all VULN_* flags)
SAFE_MODE=false

# Logging
LOG_LEVEL=info
